{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}
{% block content %}
<div class="row">
{% for billet in billets %}
<article class="col-sm-8 col-sm-offset-2">
	
    <h2><a class="billetTitle" href="{{ path('billet', { 'id': billet.id }) }}">{{ billet.title }}</a></h2>
        <p>{{ billet.content | raw }}</p>
    
</article>
{% endfor %}
</div>
{% endblock %}
       